# A sample Gemfile
source "https://rubygems.org"

ruby "2.3.0"
gem 'rails'
gem 'bundler'
gem 'rake'
gem 'activesupport'

gem 'sinatra'
gem 'sinatra-contrib'
gem 'sinatra-activerecord'

gem 'puma'
gem 'tux'
gem 'pry'

group :development, :test do
  gem 'shotgun'
  gem 'sqlite3'
end

group :production do
  gem 'rails_12factor'
  gem 'pg'
end
